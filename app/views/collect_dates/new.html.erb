<% form_for(@collect_date, :url => { :action => :check }, :html => { :method => :post }) do |f| %>

<%= menu %>
<div id="contents">
<%= submenu %>

<div id="main">

<%= message %>

<%= pagetitle :title => htitle(:collect_date) %>

<div class="sheet">

<%= f.error_messages %>
<%= flash_tag %>

<% content_for :button do %>
<div class="commonBtnArea">
<div class="centerBox">
<%= submit_button_tag(f) %>
<%= index_button_tag %>
</div>
<!--/ commonBtnArea--></div>
<% end %>

<%#= yield :button %>

<%= pagesubtitle %>
<%= required_notice_tag %>

<table class="commonSheet">
<tr>
<th><%= f.label :area %></th>
<td>
  <%= f.collection_select(:area_id, Area.find(:all), :id, :name, :include_blank => true) %>
</td>
</tr>
<tr>
<th><%= f.label :category %></th>
<td>
  <%= f.collection_select(:category_id, Category.find(:all), :id, :name, :include_blank => true) %>
</td>
</tr>
<tr>
<th><%= f.label :collect_date %></th>
<td>
  <%= f.date_select :collect_date %>
  <%= clear_cal_button_tag %>
</td>
</tr>
</table>

</div>

<%= yield :button %>

<!--/ #main--></div>
<!--/ #contents--></div>

<% end %>
