<div id="login">
<h1>しおじりごみサーチ</h1>
<!--/ #header--></div>

<div id="contents">
<div id="sub">
<!--/ #sub--></div>
<div id="main">
<div class="pageTitle">
<h2>ログイン</h2>
</div>

<% if flash.size > 0 %>
<div class="errorMessage">
<p><%= flash[:notice] %></p>
</div>
<% end %>

<% form_tag do %>
<div id="loginArea">
<div id="login">
  <div style="width: 100%;">
    <div class="corner">
        <div class="corner1"></div>
        <div class="corner2"></div>
        <div class="corner3"></div>
        <div class="corner4"></div>
    </div>
    <div class="corner5_3">
      <fieldset>
        <legend>ログイン</legend>
          <dl>
            <dt><label for="id">ログイン名</label></dt>
              <dd>
                <%= text_field_tag :id, params[:id] %>
        </dd>
            <dt><label for="password">パスワード</label></dt>
              <dd>
                <%= password_field_tag :password, params[:password] %>
        </dd>
          </dl>
          <p class="login">
        <%= image_submit_tag("/images/btn_login.png", :alt=> 'ログイン') %>
          </p>
      </fieldset>
    </div>
    <div class="corner">
        <div class="corner4"></div>
        <div class="corner3"></div>
        <div class="corner2"></div>
        <div class="corner1"></div>
    </div>
  </div>
</div>

<div id="loginBottom"></div>
<!--/ #loginArea--></div>
<% end %>

<!--/ #main--></div>
<!--/ #contents--></div>

<div id ="footer">
<!--/ #footer--></div>